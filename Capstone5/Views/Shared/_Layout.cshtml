<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bar Tracker v1.0</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bar Tracker App v1.0", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("User"))
                    {
                    <li>@Html.ActionLink("Monday", "Index", "Monday")</li>
                    <li>@Html.ActionLink("Tuesday", "Index", "Tuesday")</li>
                    <li>@Html.ActionLink("Wednesday", "Index", "Wednesday")</li>
                    <li>@Html.ActionLink("Thursday", "Index", "Thursday")</li>
                    <li>@Html.ActionLink("Friday", "Index", "Friday")</li>
                    <li>@Html.ActionLink("Saturday", "Index", "Saturday")</li>
                    <li>@Html.ActionLink("Sunday", "Index", "Sunday")</li>
                    <li>@Html.ActionLink("Favorites", "Index", "Favorites")</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bar Tracker App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/DataTable.js")
    @Scripts.Render("~/Scripts/DataTableInitializer.js")
</body>
</html>
